{
  "version": "1.0.0",
  "title": "User Management System",
  "url": "https://localhost:3000",
  "description": "A web application for managing users, including login functionality.",
  "security": {
    "authType": "bearer",
    "details": {
      "scheme": "bearer",
      "bearerFormat": "JWT",
      "tokenHeader": "Authorization",
      "tokenPrefix": "Bearer"
    }
  },
  "pagination": {
    "strategy": "page",
    "defaultPageSize": 25,
    "maxPageSize": 100
  },
  "schemas": {
    "User": {
      "type": "object",
      "properties": {
        "id": { "type": "integer" },
        "email": { "type": "string", "format": "email" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "email", "createdAt"]
    },
    "UserCreate": {
      "type": "object",
      "properties": {
        "email": { "type": "string", "format": "email" }
      },
      "required": ["email"]
    },
    "UserUpdate": {
      "type": "object",
      "properties": {
        "email": { "type": "string", "format": "email" }
      },
      "additionalProperties": false
    },
    "PagedUsers": {
      "type": "object",
      "properties": {
        "items": {
          "type": "array",
          "items": { "$ref": "#/schemas/User" }
        },
        "page": { "type": "integer" },
        "pageSize": { "type": "integer" },
        "total": { "type": "integer" }
      },
      "required": ["items", "page", "pageSize", "total"]
    },
    "Error": {
      "type": "object",
      "properties": {
        "error": {
          "type": "object",
          "properties": {
            "code": { "type": "string" },
            "message": { "type": "string" },
            "details": { "type": "object" }
          },
          "required": ["code", "message"]
        }
      },
      "required": ["error"]
    }
  },
  "errors": {
    "default": { "$ref": "#/schemas/Error" }
  },
  "resources": [
    {
      "name": "users",
      "path": "/users",
      "collection": {
        "get": {
          "summary": "List users",
          "query": {
            "page": { "type": "integer", "minimum": 1 },
            "pageSize": { "type": "integer", "minimum": 1, "maximum": 100 },
            "sort": { "type": "string", "enum": ["id", "-id", "email", "-email"] }
          },
          "responses": {
            "200": { "content": { "application/json": { "$ref": "#/schemas/PagedUsers" } } },
            "400": { "$ref": "#/errors/default" },
            "401": { "$ref": "#/errors/default" }
          }
        },
        "post": {
          "summary": "Create user",
          "requestBody": { "content": { "application/json": { "$ref": "#/schemas/UserCreate" } } },
          "responses": {
            "201": { "content": { "application/json": { "$ref": "#/schemas/User" } } },
            "400": { "$ref": "#/errors/default" },
            "401": { "$ref": "#/errors/default" }
          }
        }
      },
      "item": {
        "path": "/users/{id}",
        "parameters": { "id": { "type": "integer" } },
        "get": {
          "summary": "Get user",
          "responses": {
            "200": { "content": { "application/json": { "$ref": "#/schemas/User" } } },
            "404": { "$ref": "#/errors/default" },
            "401": { "$ref": "#/errors/default" }
          }
        },
        "patch": {
          "summary": "Update user",
          "requestBody": { "content": { "application/json": { "$ref": "#/schemas/UserUpdate" } } },
          "responses": {
            "200": { "content": { "application/json": { "$ref": "#/schemas/User" } } },
            "404": { "$ref": "#/errors/default" },
            "401": { "$ref": "#/errors/default" }
          }
        },
        "delete": {
          "summary": "Delete user",
          "responses": {
            "204": {},
            "404": { "$ref": "#/errors/default" },
            "401": { "$ref": "#/errors/default" }
          }
        }
      }
    }
  ],
  "endpoints": [
    {
      "operationId": "listUsers",
      "method": "GET",
      "path": "/users",
      "resource": "users",
      "scope": "collection"
    },
    {
      "operationId": "createUser",
      "method": "POST",
      "path": "/users",
      "resource": "users",
      "scope": "collection"
    },
    {
      "operationId": "getUser",
      "method": "GET",
      "path": "/users/{id}",
      "resource": "users",
      "scope": "item"
    },
    {
      "operationId": "updateUser",
      "method": "PATCH",
      "path": "/users/{id}",
      "resource": "users",
      "scope": "item"
    },
    {
      "operationId": "deleteUser",
      "method": "DELETE",
      "path": "/users/{id}",
      "resource": "users",
      "scope": "item"
    }
  ]
}
